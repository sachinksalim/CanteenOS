<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/history1"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:orientation="horizontal"
    android:visibility="visible">

    <TextView
        android:id="@+id/display0"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:background="@drawable/shape_rect_nofill"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/display1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:background="@drawable/shape_rect_nofill"
        android:inputType="number"
        android:focusable="false"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <EditText
        android:id="@+id/display2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:background="@drawable/shape_rect_nofill"
        android:inputType="number"
        android:focusable="false"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <ImageButton
        android:id="@+id/edit_submit1"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:onClick="onUpdateSubmit"
        android:src="@drawable/ic_done"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:background="@color/ok_green"/>

    <ImageButton
        android:id="@+id/edit1"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:onClick="onUpdate"
        android:src="@drawable/ic_edit"
        android:layout_margin="5dp"
        android:background="@color/update"/>

    <ImageButton
        android:id="@+id/remove1"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:onClick="onDelete"
        android:src="@drawable/ic_close"
        android:layout_margin="5dp"
        android:background="@color/close_red"/>

</LinearLayout>